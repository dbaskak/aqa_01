pipeline {
    agent any
    environment {
        VENV_DIR = 'venv'
        PYTHONPATH = "${WORKSPACE}/docker_project"
    }
    stages {
        stage('Checkout Code') {
            steps {
                echo 'Cloning repository for branch homework_31...'
                checkout scm: [
                    $class: 'GitSCM',
                    branches: [[name: '*/homework_31']],
                    userRemoteConfigs: [[url: 'https://github.com/dbaskak/aqa_01.git']]
                ]
            }
        }
        stage('Setup Environment') {
            steps {
                echo 'Setting up Python environment...'
                dir('docker_project') {
                    sh '''
                    python3 -m venv venv
                    source venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                    '''
                }
            }
        }
        stage('Run Tests') {
            steps {
                echo 'Running tests in docker_project...'
                dir('docker_project') {
                    sh '''
                    source venv/bin/activate
                    pytest --alluredir=allure-results
                    '''
                }
            }
        }
        stage('Publish Test Results') {
            steps {
                echo 'Publishing test results...'
                dir('docker_project') {
                    sh '''
                    allure generate allure-results -o allure-report --clean
                    '''
                }
            }
        }
        stage('Verify Test Results') {
            steps {
                echo 'Verifying test results...'
                dir('docker_project') {
                    script {
                        def allureReportPath = 'allure-report'
                        if (!fileExists(allureReportPath)) {
                            error("Allure report not generated!")
                        }
                    }
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline completed.'
            emailext(
                subject: "Pipeline Result: ${currentBuild.currentResult}",
                body: "Pipeline '${env.JOB_NAME}' completed with status: ${currentBuild.currentResult}.",
                recipientProviders: [[$class: 'DevelopersRecipientProvider']],
                to: 'dbaskak@gmail.com'
            )
        }
    }
}